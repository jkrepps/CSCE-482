<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/game_background">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
	<ScrollView
	    android:id="@+id/ScrollView01"
	    android:background="#99AAAAAA"
	    android:layout_width="483dp"
	    android:layout_height="match_parent"
	    android:fillViewport="true" >
	
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
			
		    <TableLayout
                android:id="@+id/tableForBuying"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:stretchColumns="*" >

            </TableLayout>
		</LinearLayout>
	</ScrollView>
	
	<EditText
	    android:id="@+id/editText12"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/roundededittextwhite"
	    android:ems="10"
	    android:inputType="number"
	    android:paddingLeft="10dp"
	    android:selectAllOnFocus="true"
	    android:text="50" >

	</EditText>
	<EditText
	    android:id="@+id/editText1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_toLeftOf="@+id/editText12"
	    android:background="@drawable/roundededittextwhite"
	    android:ems="10"
	    android:inputType="number"
	    android:paddingLeft="10dp"
	    android:selectAllOnFocus="true"
	    android:text="1" >

	</EditText>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:background="#00000000"
	    android:text=":   100"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#FFFFFF" />

	<Button
	    android:id="@+id/button2"
	    android:background="#99AAAAFF"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/textView4"
	    android:layout_alignLeft="@+id/infoText"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="0dp"
	    android:text="Sell Game Market" />

	<Button
	    android:id="@+id/button3"
	    android:background="#99AAAAFF"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/button2"
	    android:layout_alignLeft="@+id/infoText"
	    android:layout_toLeftOf = "@+id/button1"
	    android:layout_marginBottom="0dp"
	    android:text="Sell Player Market" />

	<TextView
	    android:id="@+id/infoText"
	    android:background="#99FFFFFF"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/button2"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/textView3"
	    android:layout_toRightOf="@+id/ScrollView01"
	    android:text="Item Info" />
	
	<TextView
	    android:id="@+id/textView6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/editText1"
	    android:layout_alignParentRight="true"
	    android:background="#00000000"
	    android:text="Price for Player Market"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<Button
	    android:id="@+id/button1"
	    style="@drawable/roundedbutton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="36dp"
	    android:layout_toLeftOf="@+id/editText1"
	    android:background="@drawable/roundedbutton"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:text="Refresh"
	    android:textColor="#FFFFFF"
	    android:textSize="17sp" />

	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/textView5"
	    android:background="#00000000"
	    android:text="Marketing = 0"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/textView5"
	    android:layout_alignParentTop="true"
	    android:layout_toLeftOf="@+id/textView1"
	    android:src="@drawable/moneybags" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/textView1"
	    android:layout_marginTop="22dp"
	    android:background="#00000000"
	    android:text=":    0"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#FFFFFF" />

	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/textView5"
	    android:layout_alignRight="@+id/imageView1"
	    android:layout_below="@+id/imageView1"
	    android:src="@drawable/science" />

	<TextView
	    android:id="@+id/textView5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/imageView2"
	    android:background="#00000000"
	    android:text="Income = 0"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/button1"
	    android:layout_alignBottom="@+id/button1"
	    android:layout_alignParentLeft="true"
	    android:layout_toLeftOf="@+id/textView6"
	    android:background="#00000000"
	    android:text="Number of Units"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	</RelativeLayout>

</LinearLayout>

